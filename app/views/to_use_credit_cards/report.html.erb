<%- model_class = ToUseCreditCard -%>

<table class="table table-striped table-condensed datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:agency) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:credit_card) %></th>
     
    </tr>
  </thead>
  <tbody>
  <% @reports.collection.each_value.sort_by{|d| d['amount']}.reverse_each do |agency| %>
    
    <tr>
      <td><%= agency['agency'] %></td>
      <td><%= number_to_currency(agency['amount'], precision: 2, separator: ",", delimiter: ".", strip_insignificant_zeros: true) %></td>

      <td><%= agency['total_cards_agency'] %></td>
      <td></td>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td><strong> Total pendiente:</strong>
        <%=number_to_currency(@reports.amount_pending, precision: 2, eparator: ",", delimiter: ".", strip_insignificant_zeros: true) %>
      </td>
      <td><strong> Cantidad de tarjetas:</strong>
        <%= @reports.total_cards %>  
      </td>
      
    </tr>
  </tbody>
</table>
