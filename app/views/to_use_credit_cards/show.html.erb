<%- model_class = ToUseCreditCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @to_use_credit_card.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expiration_month) %>:</strong></dt>
  <dd><%= @to_use_credit_card.expiration_month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expiration_year) %>:</strong></dt>
  <dd><%= @to_use_credit_card.expiration_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:security_code) %>:</strong></dt>
  <dd><%= @to_use_credit_card.security_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:holder) %>:</strong></dt>
  <dd><%= @to_use_credit_card.holder %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @to_use_credit_card.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:load_file) %>:</strong></dt>
  <dd><%= @to_use_credit_card.load_file %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blocked) %>:</strong></dt>
  <dd><%= @to_use_credit_card.blocked %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              to_use_credit_cards_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_to_use_credit_card_path(@to_use_credit_card), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              to_use_credit_card_path(@to_use_credit_card),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
